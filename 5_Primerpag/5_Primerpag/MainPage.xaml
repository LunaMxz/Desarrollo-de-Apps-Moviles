<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#512bdf"
             x:Class="_5_Primerpag.MainPage">

    <VerticalStackLayout Margin="15" Padding="30, 60, 30, 30" x:Name="vsLay">
        <Label Text="Please log in" FontSize="30" TextColor="AntiqueWhite" />
        <Label Text="Username" TextColor="White" />
        <Entry x:Name="EntryUser"/>
        <Label Text="Password" TextColor="White" />
        <Entry IsPassword="True" />
        <Button Text="Log in" BackgroundColor="#0094FF" Clicked="LoginButton_Clicked" TextColor= "#ffaa55"/>
        <Button Text="Agrega" Clicked="Agrega_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>
